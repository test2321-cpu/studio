
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for articles
    match /articles/{articleId} {
      // Anyone can read articles
      allow read: if true;
      // Only authenticated admins can create, update, or delete articles
      allow write: if request.auth != null;
    }

    // Rules for matches
    match /matches/{matchId} {
      // Anyone can read match data
      allow read: if true;
      // Only authenticated admins can create or delete matches
      allow create, delete: if request.auth != null;
      // Custom logic for updating matches
      allow update: if
        // Rule 1: Allow admins to update any field
        (request.auth != null) ||
        // Rule 2: Allow anyone to update ONLY the poll for voting
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['poll']));
    }

    // Rules for rankings
    match /rankings/{rankingId} {
      // Anyone can read rankings
      allow read: if true;
      // Only authenticated admins can write to rankings
      allow write: if request.auth != null;
    }
  }
}
