rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if true;
    }
    match /articles/{articleId} {
      allow create, update, delete: if request.auth != null;
    }
    match /matches/{matchId} {
      allow create, update, delete: if request.auth != null;
    }
  }
}
